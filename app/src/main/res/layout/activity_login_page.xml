<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ysung_reg"
            android:text="Waves of Food"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ysung_reg"
            android:text="Deliver Your Favorite Food"
            android:textColor="@color/light_green"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ysung_reg"
            android:text="Login to your Account"
            android:textColor="@color/light_green"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#53E88B"
                app:hintEnabled="true"
                app:hintTextColor="@color/light_green">

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/edit_text_spape"
                    android:hint="Email or phone number"
                    android:textColor="#000000"
                    android:textColorHint="@color/light_green"
                    app:helperTextTextColor="@color/light_green"
                    app:hintTextColor="@color/light_green" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#53E88B"
                app:expandedHintEnabled="true"
                app:hintTextColor="@color/light_green">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_spape"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/light_green" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_Btn"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/green_button_bg"
            android:fontFamily="@font/ysung_reg"
            android:text="Login"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/intent_Signin_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ysung_reg"
            android:text="Dont' have account"
            android:textColor="@color/light_green"
            android:textSize="19sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>